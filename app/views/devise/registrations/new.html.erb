<h2 class="h2">Sign up</h2>
<%= form_for @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.text_field :contact_number, autocomplete: "tel", placeholder:"Contact Number" %>
  </div>

  <div class="field">
    <%= f.select :role, [["--Select Role--", ""], ["Purchaser", "buyer"], ["Vendor", "seller"]], include_blank: false, selected: "" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
